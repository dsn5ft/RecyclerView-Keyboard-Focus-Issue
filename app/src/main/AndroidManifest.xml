<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.recyclerviewkeyboardfocusissue"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WrapContentRecyclerActivity"
            android:label="@string/wrap_content_bug"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".activity.MatchParentRecyclerActivity"
            android:label="@string/match_parent_no_bug"
            android:windowSoftInputMode="adjustResize|stateHidden" />
    </application>

</manifest>